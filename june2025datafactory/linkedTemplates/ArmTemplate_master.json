{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "june2025datafactory"
		},
		"DS_Blob_storgare_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'DS_Blob_storgare'"
		},
		"LS_OnPrem_SQLServer_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'LS_OnPrem_SQLServer'"
		},
		"LS_OnPrem_SQLServer_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "SSIC-SQL-01"
		},
		"LS_OnPrem_SQLServer_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "HR"
		},
		"LS_OnPrem_SQLServer_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "trainer"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "june2025datafactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"DS_Blob_storgare_connectionString": {
						"value": "[parameters('DS_Blob_storgare_connectionString')]"
					},
					"LS_OnPrem_SQLServer_password": {
						"value": "[parameters('LS_OnPrem_SQLServer_password')]"
					},
					"LS_OnPrem_SQLServer_properties_typeProperties_server": {
						"value": "[parameters('LS_OnPrem_SQLServer_properties_typeProperties_server')]"
					},
					"LS_OnPrem_SQLServer_properties_typeProperties_database": {
						"value": "[parameters('LS_OnPrem_SQLServer_properties_typeProperties_database')]"
					},
					"LS_OnPrem_SQLServer_properties_typeProperties_userName": {
						"value": "[parameters('LS_OnPrem_SQLServer_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}