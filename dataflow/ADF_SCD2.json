{
	"name": "ADF_SCD2",
	"properties": {
		"folder": {
			"name": "TDSG_ADF_DataFlow"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Blob",
						"type": "DatasetReference"
					},
					"name": "sourceData"
				},
				{
					"dataset": {
						"referenceName": "DS_Blob",
						"type": "DatasetReference"
					},
					"name": "target"
				},
				{
					"dataset": {
						"referenceName": "DS_Blob",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "sourcederived"
				},
				{
					"name": "targetderived"
				},
				{
					"name": "join1"
				},
				{
					"name": "insert"
				},
				{
					"name": "insertDerived"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "join2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmployeeID as short,",
				"          Name as string,",
				"          Gender as string,",
				"          DateOfBirth as string,",
				"          Department as string,",
				"          JobTitle as string,",
				"          Salary as integer,",
				"          HireDate as string,",
				"          Address as string,",
				"          Email as string,",
				"          PhoneNumber as string,",
				"          MaritalStatus as string,",
				"          EffectiveDate as string,",
				"          EndDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceData",
				"source(output(",
				"          EmployeeID as short,",
				"          Name as string,",
				"          Gender as string,",
				"          DateOfBirth as string,",
				"          Department as string,",
				"          JobTitle as string,",
				"          Salary as integer,",
				"          HireDate as string,",
				"          Address as string,",
				"          Email as string,",
				"          PhoneNumber as string,",
				"          MaritalStatus as string,",
				"          EffectiveDate as string,",
				"          EndDate as string,",
				"          IsCurrent as boolean,",
				"          created_by as string,",
				"          created_at as date,",
				"          modified_by as string,",
				"          modified_at as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> target",
				"source(output(",
				"          EmployeeID as short,",
				"          Name as string,",
				"          Gender as string,",
				"          DateOfBirth as string,",
				"          Department as string,",
				"          JobTitle as string,",
				"          Salary as integer,",
				"          HireDate as string,",
				"          Address as string,",
				"          Email as string,",
				"          PhoneNumber as string,",
				"          MaritalStatus as string,",
				"          EffectiveDate as string,",
				"          EndDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"sourceData derive(DateOfBirth = toDate(DateOfBirth,'dd-MM-yyyy'),",
				"          HireDate = toDate(HireDate,'dd-MM-yyyy'),",
				"          EffectiveDate = toDate(EffectiveDate,'dd-MM-yyyy'),",
				"          EndDate = toDate(EndDate,'dd-MM-yyyy')) ~> sourcederived",
				"target derive(DateOfBirth = toDate(DateOfBirth,'yyyy-MM-dd'),",
				"          HireDate = toDate(HireDate,'yyyy-MM-dd'),",
				"          EffectiveDate = toDate(EffectiveDate,'yyyy-MM-dd'),",
				"          EndDate = toDate(EndDate,'yyyy-MM-dd'),",
				"          IsCurrent = 1) ~> targetderived",
				"sourcederived, targetderived join(sourceData@EmployeeID == target@EmployeeID,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 split(isNull(target@EmployeeID),",
				"     sourceData@EmployeeID == target@EmployeeID && (sourceData@Department != target@Department || sourceData@JobTitle != target@JobTitle || sourceData@Salary != target@Salary || sourceData@MaritalStatus != target@MaritalStatus),",
				"     disjoint: false) ~> insert@(Insert, UPDATE, existing)",
				"insert@Insert derive(IsCurrent = 1,",
				"          created_by = 'I2025_MSyed',",
				"          created_at = currentDate()) ~> insertDerived",
				"insert@UPDATE derive(EndDate = currentDate(),",
				"          IsCurrent = 0) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          EmployeeID = insert@UPDATE@EmployeeID,",
				"          Name = insert@UPDATE@Name,",
				"          Gender = insert@UPDATE@Gender,",
				"          DateOfBirth = insert@UPDATE@DateOfBirth,",
				"          Department = insert@UPDATE@Department,",
				"          JobTitle = insert@UPDATE@JobTitle,",
				"          Salary = insert@UPDATE@Salary,",
				"          HireDate = insert@UPDATE@HireDate,",
				"          Address = insert@UPDATE@Address,",
				"          Email = insert@UPDATE@Email,",
				"          PhoneNumber = insert@UPDATE@PhoneNumber,",
				"          MaritalStatus = insert@UPDATE@MaritalStatus,",
				"          EffectiveDate = insert@UPDATE@EffectiveDate,",
				"          EndDate,",
				"          IsCurrent,",
				"          created_by,",
				"          created_at,",
				"          modified_by,",
				"          modified_at",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"source1 derive(DateOfBirth = toDate(DateOfBirth,'dd-MM-yyyy'),",
				"          HireDate = toDate(HireDate,'dd-MM-yyyy'),",
				"          EffectiveDate = toDate(EffectiveDate,'dd-MM-yyyy'),",
				"          EndDate = toDate(EndDate,'dd-MM-yyyy')) ~> derivedColumn2",
				"derivedColumn2, targetderived join(source1@EmployeeID == target@EmployeeID,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join2"
			]
		}
	}
}